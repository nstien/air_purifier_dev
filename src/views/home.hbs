<div id="app">
    <div class="container">

        <div class="top">

            <div class="concentration-of-dust">
                <div>
                    <span>PM2.5</span>
                    <h1>{{cod}}</h1>
                    <span>&#181;g/m3</span>
                </div>
            </div>

            <ul class="list">
                <li class="item">
                    <span class="material-symbols-outlined temperature">
                        sunny_snowing
                    </span>
                    <h2>{{temperature}}&#176;C</h2>
                    <span>temperature</span>
                </li>
                <li class="item">
                    <span class="material-symbols-outlined concentration-of-co2">
                        thermostat
                    </span>
                    <h2>{{co2}}%</h2>
                    <span>concentration-of-co2</span>
                </li>
                <li class="item">
                    <span class="material-symbols-outlined humidity">
                        humidity_mid
                    </span>
                    <h2>{{humidity}}%</h2>
                    <span>humidity</span>
                </li>
            </ul>
        </div>

        <div class="controllers">
            <div class="power" data-check={{power}}>
                <span class="material-symbols-outlined">
                    power_settings_new
                </span>
            </div>
            <div class="auto">
                <span class="material-symbols-outlined">
                    hdr_auto
                </span>
                <span class="material-symbols-outlined">
                    clear_night
                </span>
            </div>
        </div>

    </div>
</div>



<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    const power = document.querySelector('.power');
    let status = 'tat'
    let isCheck = false
    power.addEventListener('click', (e) => {
        isCheck = !isCheck
        if (isCheck) {
            status = 'b'
            socket.emit('status', status);
        } else {
            status = 't'
            socket.emit('status', status);
        }
    })
    
</script>